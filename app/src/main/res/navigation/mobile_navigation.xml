<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mikerusetsky.livefootball.ui.Home.HomeFragment"
        android:label="@string/fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_live"
        android:name="com.mikerusetsky.livefootball.ui.Live.LiveFragment"
        android:label="@string/fragment_live"
        tools:layout="@layout/fragment_live" />

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.mikerusetsky.livefootball.ui.Schedule.ScheduleFragment"
        android:label="@string/fragment_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_standings"
        android:name="com.mikerusetsky.livefootball.ui.settings.SettingsFragment"
        android:label="@string/fragment_standings"
        tools:layout="@layout/fragment_settings" />
</navigation>